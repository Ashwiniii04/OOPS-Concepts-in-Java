package OPPS;

/**
 * Demonstrates Constructor Overloading and Encapsulation in Java
 */
public class CarDemo {

    static class Car {
        private int seats;
        private String name;
        private double length;

        // Default constructor
        public Car() {
            this.seats = 4;
            this.name = "Unknown";
            this.length = 4.0;
        }

        // Parameterized constructor
        public Car(int seats, String name, double length) {
            this.seats = seats;
            this.name = name;
            this.length = length;
        }

        // Getter methods
        public int getSeats() {
            return seats;
        }

        public String getName() {
            return name;
        }

        public double getLength() {
            return length;
        }

        // toString method
        @Override
        public String toString() {
            return "Car [Seats=" + seats + ", Name=" + name + ", Length=" + length + "]";
        }
    }

    public static void main(String[] args) {

        Car c1 = new Car();   // default constructor
        Car c2 = new Car(2, "Batmobile", 9.1);
        Car c3 = new Car(5, "Sonnet", 5.1);

        System.out.println(c1);
        System.out.println(c2);
        System.out.println(c3);
    }
}
